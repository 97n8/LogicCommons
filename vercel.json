{
  "buildCommand": "node scripts/vercel-build.mjs",
  "outputDirectory": "dist",
  "redirects": [
    { "source": "/HMLP", "destination": "/hmlp/", "permanent": true },
    { "source": "/HMLP/:path*", "destination": "/hmlp/:path*", "permanent": true }
  ],
  "rewrites": [
    { "source": "/hmlp", "destination": "/hmlp/index.html" },
    { "source": "/hmlp/:path*", "destination": "/hmlp/index.html" }
  ]
}
